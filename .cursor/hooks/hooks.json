{
  "$schema": "https://json.schemastore.org/cursor-hooks",
  "description": "Cursor hook configuration for automated AI loop tasks",
  "hooks": {
    "beforeSubmitPrompt": {
      "enabled": false,
      "scripts": [],
      "description": "Enrich prompts with project context before submission"
    },
    "afterFileEdit": {
      "enabled": true,
      "scripts": ["post-edit-check.sh", "auto-format.sh"],
      "description": "Run checks after file edits"
    },
    "beforeShellExecution": {
      "enabled": true,
      "scripts": ["shell-guard.sh"],
      "description": "Guard against dangerous shell commands"
    },
    "afterTestRun": {
      "enabled": false,
      "scripts": [],
      "description": "Check coverage after test runs"
    }
  }
}
